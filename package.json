{
  "name": "cloudfest-usa-2025-local-env",
  "version": "1.0.0",
  "description": "Local development environment for CloudFest USA 2025 Hackathon - FAIR, AspireCloud, and PatchStack integration",
  "scripts": {
    "setup": "bash scripts/setup-ssl.sh",
    "dev:start": "bash scripts/start-all.sh",
    "dev:stop": "bash scripts/stop-all.sh",
    "dev:reset": "bash scripts/reset-all.sh",
    "dev:logs": "docker-compose logs -f",
    "db:import": "bash scripts/import-database.sh",
    "aspirecloud:update": "docker pull ghcr.io/aspirepress/aspirecloud:latest && docker-compose up -d --force-recreate aspirecloud && bash scripts/init-aspirecloud.sh",
    "aspirecloud:init": "bash scripts/init-aspirecloud.sh",
    "wp-env": "wp-env",
    "wp:start": "wp-env start",
    "wp:stop": "wp-env stop",
    "wp:destroy": "wp-env destroy",
    "wp:clean": "wp-env clean",
    "wp:logs": "wp-env logs",
    "wp:cli": "wp-env run cli wp",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "team:example": "docker-compose -f docker-compose.yml -f docker-compose.example.yml up -d",
    "team:example:down": "docker-compose -f docker-compose.yml -f docker-compose.example.yml down",
    "team:example:logs": "docker-compose -f docker-compose.yml -f docker-compose.example.yml logs -f",
    "team:backend": "docker-compose -f docker-compose.yml -f docker-compose.backend.yml up -d",
    "team:backend:down": "docker-compose -f docker-compose.yml -f docker-compose.backend.yml down",
    "team:backend:logs": "docker-compose -f docker-compose.yml -f docker-compose.backend.yml logs -f",
    "team:frontend": "docker-compose -f docker-compose.yml -f docker-compose.frontend.yml up -d",
    "team:frontend:down": "docker-compose -f docker-compose.yml -f docker-compose.frontend.yml down",
    "team:frontend:logs": "docker-compose -f docker-compose.yml -f docker-compose.frontend.yml logs -f",
    "team:policy": "docker-compose -f docker-compose.yml -f docker-compose.policy.yml up -d",
    "team:policy:down": "docker-compose -f docker-compose.yml -f docker-compose.policy.yml down",
    "team:policy:logs": "docker-compose -f docker-compose.yml -f docker-compose.policy.yml logs -f",
    "services:list": "docker ps --format 'table {{.Names}}\\t{{.Status}}\\t{{.Ports}}'",
    "network:inspect": "docker network inspect cloudfest-network"
  },
  "devDependencies": {
    "@wordpress/env": "^10.11.0"
  },
  "keywords": [
    "wordpress",
    "development",
    "docker",
    "cloudfest",
    "hackathon",
    "fair",
    "aspirecloud",
    "patchstack"
  ],
  "author": "Alain Schlesser",
  "license": "MIT"
}
